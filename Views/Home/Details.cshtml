@model join.Models.product

<h1 class="text-3xl font-bold">Product Details</h1>

<div class="mt-4">
    <h4 class="font-bold">Id: @Model.id</h4>
    <hr class="my-4" />
    <dl class="grid grid-cols-2 gap-x-4">
        <dt class="font-bold">Name:</dt>
        <dd>@Model.name</dd>
        <dt class="font-bold">Phone:</dt>
        <dd>@Model.phone</dd>
        <dt class="font-bold">Address:</dt>
        <dd>@Model.address</dd>
    </dl>
    <div class="mt-4">
        <a href="@Url.Action("Index")" class="text-blue-500 hover:underline">Back to List</a>
    </div>
</div>
